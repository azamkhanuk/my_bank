<!DOCTYPE html>
<html>
  <head>
    <title>MyBank</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>  </head>

  <body>

    <span class="navbar navbar-expand-lg navbar-trans navbar-inverse" style="color: #000">
      <a class="navbar-brand" href="/">Home</a>
          <% if @current_user %>
            <%= link_to @current_user.full_name, user_path(@current_user) %>
            <%= image_tag('http://i.imgur.com/dnzIrpy.jpg', size:"40x40") %>
            <%= button_to "Logout", logout_path, method: "delete", controller: "sessions", class: "btn btn-dark btn-sm my-2 my-sm-0", form: { style: "display: inline" }%>
          <% else %>
            <%= link_to "Login", login_form_path, method: "get", class: "btn btn-dark btn-sm my-2 my-sm-0", form: { style: "display: inline" }%>
          <% end %>
    </span>

    <%= yield %>
  </body>
</html>
