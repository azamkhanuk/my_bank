<!DOCTYPE html>
<html>
  <head>
    <title>MyBank</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>  </head>

  <body>

    <span class="navbar navbar-expand-lg navbar-trans navbar-inverse" style="color: #000">
      <a class="navbar-brand" href="/">Home</a>
          <% if @current_user %>
            <%= link_to @current_user.full_name, user_path %>
            <%= button_to "Logout", logout_path, method: "delete", controller: "sessions", class: "btn btn-dark btn-sm", style: "form-inline my-2 my-lg-0" %>
          <% else %>
            <%= link_to "Login", login_form_path, method: "get", class: "btn btn-dark btn-sm", style: "form-inline my-2 my-lg-0" %>
          <% end %>
    </span>


    <%= yield %>
  </body>
</html>
